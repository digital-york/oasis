<% if Hyrax.config.google_analytics_id? %>
  <script async src="https://www.googletagmanager.com/gtag/js?id=<%= Hyrax.config.google_analytics_id %>"></script>
  <script>
    window.dataLayer = window.dataLayer || [];
    function gtag(){dataLayer.push(arguments);}
    gtag('js', new Date());

    gtag('config', '<%= Hyrax.config.google_analytics_id %>', {
      'anonymize_ip': true
    });
  </script>
	<meta name="analytics-provider" content="google">
<% end %>
